@page "/not-found"

<PageTitle>Not found</PageTitle>

<FluentStack Orientation="Orientation.Vertical" VerticalGap="24" Style="margin-top: 2rem;">
    <FluentIcon Value="@(new Icons.Regular.Size48.Document())" Color="Color.Error" />
    
    <FluentLabel Typo="Typography.H2">
        404 - Page Not Found
    </FluentLabel>
    
    <FluentLabel Typo="Typography.Body">
        Sorry, the page you're looking for doesn't exist.
    </FluentLabel>
    
    <FluentButton Appearance="Appearance.Accent" Href="/">
        Go to Home
    </FluentButton>
</FluentStack>
