@using FluentUI.Blazor.Monaco.EditorPack.Shared.Components.Layout
@using FluentUI.Blazor.Monaco.EditorPack.Shared.Components.Pages
@using FluentUI.Blazor.Monaco.EditorPack.Shared.Components
@using Microsoft.AspNetCore.Components.Routing

<Router AppAssembly="@typeof(Program).Assembly" 
        AdditionalAssemblies="@(new[] { typeof(FluentUI.Blazor.Monaco.EditorPack.Shared.Components.EditorsDemo).Assembly })">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <NotFound />
        </LayoutView>
    </NotFound>
</Router>
